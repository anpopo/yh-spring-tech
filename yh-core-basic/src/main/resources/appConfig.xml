<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class="anpopo.yhcorebasic.member.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository"/>

    </bean>

    <bean name="memberRepository" class="anpopo.yhcorebasic.member.MemoryMemberRepository" />

    <bean name="orderService" class="anpopo.yhcorebasic.orders.OrdersServiceImpl" >
        <constructor-arg name="discountPolicy" ref="discountPolicy"/>
        <constructor-arg name="memberRepository" ref="memberRepository"/>
    </bean>

    <bean id="discountPolicy" class="anpopo.yhcorebasic.discount.RateDiscountPolicy"/>

</beans>